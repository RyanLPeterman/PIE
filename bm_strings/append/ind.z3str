(declare-const s0 String)
(declare-const s1 String)
(declare-const r String)
(declare-const i Int)

;; Invariant :: r = s0 ++ s1[0:i]

(define-fun ind_check () Bool
            (and (and (< i (Length s1)) (= r (Concat s0 (Substring s1 0 i))))
                 (not (= (Concat r (CharAt s1 i)) (Concat s0 (Substring s1 0 (+ i 1)))))))

(assert ind_check)
(check-sat)
